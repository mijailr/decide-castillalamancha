<div class="card">
  <div class="card-divider">
    <h2 class="card-title"><%= t "index.title", scope: "decidim.news.admin" %> <%= link_to t("new.title", scope: "decidim.news.admin"), new_post_path, class: 'button tiny button--title new' %></h2>
  </div>
  <div class="card-section">
    <div class="table-scroll">
      <table class="table-list">
        <thead>
          <tr>
            <th><%= t("fields.title", scope: "decidim.news.admin") %></th>
            <th><%= t("fields.created_at", scope: "decidim.news.admin") %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td>
                <%= link_to translated_attribute(post.title), ['edit', post] %><br />
              </td>
              <td>
                <%= l post.created_at, format: :short %>
              </td>
              <td class="table-list__actions">
                <% if can? :update, post %>
                  <%= icon_link_to "pencil", ['edit', post], t("update.title", scope: "decidim.news.admin"), class: "action-icon--edit" %>
                <% end %>

                <%= icon_link_to "eye", decidim_news.post_path(post), t("view", scope: "decidim.news.admin"), class: "action-icon--preview" %>

                <% if can? :destroy, post %>
                  <%= icon_link_to "circle-x", post, t("destroy", scope: "decidim.news.admin"), class: "action-icon--remove", method: :delete, data: { confirm: t("actions.confirm_destroy", scope: "decidim.admin") } %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @posts, theme: "decidim" %>
    </div>
  </div>
</div>
